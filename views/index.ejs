<% layout('./layouts/boiler.ejs') %>

<style>
  .heading {
    font-size: 1.4rem;
    font-weight: 600;
    color: #0d6efd;
    border-left: 4px solid #0d6efd;
    padding-left: 10px;
    margin-bottom: 14px;
    /* text-align: center; */
  }
  h3{
      color: #0d6efd;
          font-size: 1.4rem;
  }
</style>

<body class="bg-light">
  <div class="container py-5">
    <div class="row justify-content-center">
      <div class="col-md-8">
        <h3 class="heading">TextBin -- Drop Your Text</h3>
        <div class="card shadow-sm">
          <div class="card-body">
            <h3 class="text-center mb-4">Create Paste</h3>

            <form action="/paste/create" method="POST">
              <!-- Paste Content -->
              <div class="mb-3">
                <label class="form-label">Paste Content</label>
                <textarea
                  class="form-control"
                  name="content"
                  rows="6"
                  required
                ></textarea>
              </div>

              <!-- Destroy Option -->
              <div class="mb-3">
                <label class="form-label">Destroy Option</label>
                <select class="form-select" name="destroyMode">
                  <option value="TIME" selected>
                    Default (Delete after 5 days)
                  </option>
                  <option value="READ">Destroy after read</option>
                  <option value="CUSTOM">Custom expiry</option>
                </select>
              </div>

              <!-- Custom Expiry -->
              <div class="mb-3">
                <label class="form-label">Custom Expiry (Optional)</label>
                <input
                  type="datetime-local"
                  class="form-control"
                  name="customExpiry"
                />
              </div>

              <div class="d-grid">
                <button class="btn btn-primary">Create Paste</button>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
</body>
